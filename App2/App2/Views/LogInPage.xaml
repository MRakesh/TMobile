        <StyleSheet Source="../Styles/LoginPage.css"/>
    </ContentPage.Resources>-->
    <ContentPage.BindingContext>
        <vm:LoginViewModelTemp/>
    </ContentPage.BindingContext>
    <ContentPage.Content>
        <!--<FlexLayout StyleClass="body">
            <FlexLayout  StyleClass="container" >
                <Label Text="Login" class="logo"/>
